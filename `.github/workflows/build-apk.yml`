name: Build Omnisms APK

on:
  workflow_dispatch:  # Lance manuellement depuis l'UI
  push:
    branches: [ main ]

jobs:
  build-apk:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      
    - name: Setup Flutter
      uses: subosito/flutter-action@v2
      with:
        flutter-version: '3.x'
        channel: 'stable'
        
    - name: Install dependencies
      run: |
        flutter clean
        flutter pub get
        
    - name: Build APK (split)
      run: flutter build apk --split-per-abi --release
      
    - name: Upload APKs
      uses: actions/upload-artifact@v4
      with:
        name: omnisms-apks
        path: build/app/outputs/flutter-apk/*.apk
        retention-days: 30
